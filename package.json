{
    "name": "easy-less",
    "displayName": "Easy LESS",
    "description": "Auto-compile LESS to CSS on save",
    "version": "1.1.0",
    "publisher": "mrcrowl",
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:less",
        "onCommand:easyLess.compile"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mrcrowl/vscode-easy-less.git"
    },
    "main": "./out/easyLess",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Easy LESS configuration",
            "properties": {
                "less.compile": {
                    "type": "object",
                    "description": "Configuration options for Easy LESS extension.",
                    "properties": {
                        "compress": {
                            "type": "boolean",
                            "description": "Compress .css files? (removes unnecessary white-space)",
                            "default": false
                        },
                        "sourceMap": {
                            "type": "boolean",
                            "description": "Should .map files be generated?",
                            "default": false
                        },
                        "out": {
                            "type": ["boolean"],
                            "description": "Default 'out' setting. Set to false to default to no output.",
                            "default": false
                        }
                    }
                }
            }
        },
        "commands": [
            {
                "command": "easyLess.compile",
                "title": "Compile LESS to CSS"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#667",
        "theme": "dark"
    },
    "dependencies": {
        "less": "^2.5.3"
    },
    "devDependencies": {
        "typescript": "^1.6.2",
        "vscode": "0.10.x",
        "extend": "3.0.0",
        "mkpath": "1.0.0"
    }
}